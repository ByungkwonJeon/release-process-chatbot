{
  "name": "release-process-chatbot",
  "version": "1.0.0",
  "description": "Chatbot for managing release process with Bitbucket, Jira, Terraform, and Spinnaker integration using Model Context Protocol",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "setup": "npm install && npm run install-client",
    "db:init": "node -e \"require('./src/models/database').initializeDatabase().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); })\"",
    "test": "echo \"No tests specified\" && exit 0",
    "test:jira": "node test-jira-oauth.js",
    "test:database": "node test-file-database.js",
    "validate": "npm run db:init",
    "mcp:start": "node src/mcp/server.js",
    "mcp:dev": "nodemon src/mcp/server.js"
  },
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.7.2",
    "axios": "^1.5.0",
    "dotenv": "^17.2.1",
    "cors": "^2.8.5",
    "helmet": "^7.2.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "node-cron": "^4.2.1",
    "uuid": "^11.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "multer": "^2.0.2",
    "yaml": "^2.3.1",
    "ssh2": "^1.14.0",
    "aws-sdk": "^2.1450.0",
    "simple-git": "^3.19.1",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "ws": "^8.14.2",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "chatbot",
    "release",
    "devops",
    "bitbucket",
    "jira",
    "terraform",
    "spinnaker",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Byungkwon Jeon",
  "private": true
}
